<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auction</title>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="main">
        <div class="container body-content main-form">
            <div class="row head-block">
            </div>
            <div class="row">
                <div class="navbar navbar-inverse ">
                    <div>
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>

                            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                                <img src="@Url.Content("~/Content/Images/emblem.png")" class="img-responsive" alt="emblem"/>
                            </a>
                        </div>
                        <div class="navbar-collapse collapse">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>


            <div class="container body-content another-form">
                @RenderBody()
            </div>
            <footer class="footer">
                <span>&copy; @DateTime.Now.Year - By Loz</span>
            </footer>
        </div>

    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
