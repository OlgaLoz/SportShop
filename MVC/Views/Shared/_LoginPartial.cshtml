@using System.Drawing
@if (Request.IsAuthenticated)
{
    @Html.AntiForgeryToken()
    <div class="nav navbar-nav navbar-right">
        <ul class="nav navbar-nav">
            <li><a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                Home
            </a></li>
            @if (User.IsInRole("Administrator"))
            {
                <li><a href="@Url.Action("Index", "Admin")" class="navbar-brand">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    Users
                </a></li>
                <li><a href="@Url.Action("Index", "Category")" class="navbar-brand">
                    <span class="glyphicon glyphicon-tasks" aria-hidden="true"></span>
                    Categories
                 </a></li>
            }
            <li><a href="@Url.Action("Index", "Search")" class="navbar-brand">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                Search
            </a></li>
            <li><a href="@Url.Action("Lots", "PersonalPage")" class="navbar-brand">
                <span class="glyphicon glyphicon-th" aria-hidden="true"></span>
                Lots
            </a></li>
            <li><a href="@Url.Action("ShowBetHistory", "Bet")" class="navbar-brand">
                <span class="glyphicon glyphicon-hand-up" aria-hidden="true"></span>
                Bet history
            </a></li>
            <li><a href="@Url.Action("Index", "Profile")" class="navbar-brand">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    @User.Identity.Name
            </a></li>
            <li>
                <a href="@Url.Action("LogOff", "Account")" class="navbar-brand">
                    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                </a>
            </li>
        </ul>
    </div>
}
else
{
    <div class="nav navbar-nav navbar-right">
        <ul class="nav navbar-nav ">
            <li><a href="@Url.Action("Register", "Account")" class="navbar-brand">
                <span class="glyphicon glyphicon-registration-mark" aria-hidden="true"></span>
            </a></li>
            <li><a href="@Url.Action("Login", "Account")" class="navbar-brand">
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
            </a></li>
        </ul>
    </div>
}
